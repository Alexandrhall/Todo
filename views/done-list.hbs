<div class="listWrap">
    <h4>To do</h4>
    <ul id="myList" class="list">
    </ul>
</div>
<div class="listWrap">
    <h4>Done</h4>
    <ul id="doneList" class="list">
        {{#each tasks}}
            {{#if done}}
                <li class="task">
                    <a href="/lol/{{id}}" class="linkname">{{name}}</a>
                    <a href="/{{id}}/edit" class="close">E</a>
                    <a href="/{{id}}/del" class="close">X</a>
                </li>
            {{/if}}
        {{/each}}
    </ul>
</div>
<header>
    <div id="headwrap">
        <h2>To do List</h2>
        <form method="POST" action="/">
            <input
                class="input"
                placeholder="Write New..."
                name="name"
                type="text"
                id="inp"
            />
            <button id="button" type="submit">Add</button>
        </form>
    </div>
</header>
<main id="mainwrap">
    <div class="butWrap">
        <button id="sort">Sort Name</button>
        <button id="dateSort">Sort Date</button>
        <form action="/show/done" method="GET">
        <label name="Show" id="Show">Show:
            <select>   
                    <option value="http://localhost:3000/show/done">Done</option>
                    <input value="Submit" type="submit"></button>
            </select>
        </label>
        </form>
    </div>
    <div class="listWrap">
        <h4>To do</h4>
        <ul id="myList" class="list">
            {{#each tasks}}
                {{#unless done}}
                    <li class="task">
                        <a href="/lol/{{id}}">{{name}}</a><a
                            href="/{{id}}/del"
                            class="close"
                        >X</a></li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="listWrap">
        <h4>Done</h4>
        <ul id="doneList" class="list">
           </ul>
    </div>
</main>
<div class="listWrap">
    <h4>To do</h4>
    <ul id="myList" class="list">
        {{#each tasks}}
            {{#unless done}}
                <li class="task">
                    <a
                        href="/checked/{{id}}"
                        class="linkname"
                    >{{description}}</a>
                    <a href="/{{id}}/edit" class="close">E</a>
                    <a href="/{{id}}/del" class="close">X</a>
                </li>
            {{/unless}}
        {{/each}}
    </ul>
</div>
<div class="listWrap">
    <h4>Done</h4>
    <ul id="doneList" class="list">

    </ul>
</div>